<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:padding="2dp">
    <TextView
        android:id="@+id/var_detail_list_user"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_margin="2dp"
        android:background="@drawable/ic_shape_pill"
        android:backgroundTint="@color/colorCloseChip"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Тодбаяр.A" />
    <TextView
        android:id="@+id/var_detail_list_yes"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_margin="2dp"
        android:background="@drawable/ic_shape_pill"
        android:backgroundTint="@color/colorFBColor"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Хэвийн" />
    <TextView
        android:id="@+id/var_detail_list_datetime"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_margin="2dp"
        android:background="@drawable/ic_shape_pill"
        android:backgroundTint="@color/colorCloseChip"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="2018/12/2 14:44" />
</LinearLayout>